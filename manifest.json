{
	"name": "Consumer Rights Wiki Checker",
	"description": "Check companies for consumer rights violations using Louis Rossmann's Consumer Rights Wiki",
	"version": "2025.6",
	"manifest_version": 2,

	"browser_action": {
		"default_popup": "popup.html",
		"default_title":"Consumer Rights Checker",
		"default_icon": "consumerrights.wiki.png"
	},

	"permissions": [
		"activeTab",
		"storage",
		"https://*/*"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],

	"icons": {
		"16": "consumerrights.wiki.png",
		"48": "consumerrights.wiki.png",
		"128": "consumerrights.wiki.png"
	},

	"applications": {
		"gecko": {
			"id": "consumer-rights@onpoint.com",
			"strict_min_version": "58.0"
		}
	}
}
